<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(SolutionDir)Common.props" />
  
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0-android</TargetFramework>
    <SupportedOSPlatformVersion>21</SupportedOSPlatformVersion>
    <Nullable>enable</Nullable>
    <ApplicationId>com.Slater.Dauer.Ui</ApplicationId>
    <ApplicationVersion>1</ApplicationVersion>
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <AndroidPackageFormat>apk</AndroidPackageFormat>
    <AndroidEnableProfiledAot>False</AndroidEnableProfiledAot>
  </PropertyGroup>

  <ItemGroup>
    <AndroidResource Include="Icon.png">
      <Link>Resources\drawable\Icon.png</Link>
    </AndroidResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.Android" Version="$(AvaloniaVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Dauer.Fuse.Secure\Dauer.Fuse.Secure.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Dauer.Fuse">
      <HintPath>..\Dauer.Fuse\bin\$(Configuration)\net7.0\Dauer.Fuse.dll</HintPath>
    </Reference>
  </ItemGroup>

  <!-- We don't need to obfuscate on Android since it's AOT compiled which is not easily reversed -->
  <!--<ItemGroup>
    <Reference Include="Dauer.Fuse">
      <HintPath>..\Dauer.Fuse\bin\$(Configuration)\net7.0\Dauer.Fuse_Secure\Dauer.Fuse.dll</HintPath>
    </Reference>
  </ItemGroup>-->

</Project>
