<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(SolutionDir)Common.props" />
  
  <PropertyGroup>
    <Nullable>enable</Nullable>
    <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    <!-- For JS interop https://learn.microsoft.com/en-us/aspnet/core/blazor/javascript-interoperability/?view=aspnetcore-7.0--> 
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  
  <ItemGroup>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="$(AvaloniaVersion)" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="$(AvaloniaVersion)" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="$(AvaloniaVersion)" />
    <PackageReference Include="OxyPlot.Avalonia" Version="2.1.0-av11-preview6" />
    <PackageReference Include="ReactiveUI.Fody" Version="18.4.44" />
    
    <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
    <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="$(AvaloniaVersion)" />

    <!--Mapsui dependencies-->
    <PackageReference Include="Mapsui" Version="4.0.0-beta.11" />
    <PackageReference Include="Mapsui.Nts" Version="4.0.0-beta.11" />
    <PackageReference Include="Mapsui.Rendering.Skia" Version="4.0.0-beta.11" />
    <PackageReference Include="Mapsui.Tiling" Version="4.0.0-beta.11" />
    <PackageReference Include="BruTile" Version="5.0.4" />
    <PackageReference Include="SkiaSharp" Version="2.88.3" />
    <PackageReference Include="Svg.Skia" Version="0.6.0-preview5" />
    <PackageReference Include="Topten.RichTextKit" Version="0.4.165" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\Dauer.Model\Dauer.Model.csproj" />
    <ProjectReference Include="..\..\Core\Dauer.Services\Dauer.Services.csproj" />
    <ProjectReference Include="..\..\Infrastructure\Dauer.Adapters.Fit\Dauer.Adapters.Fit.csproj" />
    <ProjectReference Include="..\..\Infrastructure\Dauer.Data\Dauer.Data.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!--This DLL is hand-built since the MapsUi branch for Avalonia11 requires preview8 but we use preview6 -->
    <Reference Include="Mapsui.UI.Avalonia" HintPath="lib\Mapsui\Mapsui.UI.Avalonia.dll" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\MapView.axaml.cs">
      <DependentUpon>MapView.axaml</DependentUpon>
    </Compile>
    <Compile Update="Views\PlotView.axaml.cs">
      <DependentUpon>PlotView.axaml</DependentUpon>
    </Compile>
    <Compile Update="Views\LapView.axaml.cs">
      <DependentUpon>LapView.axaml</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
