<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Dauer.Ui.ViewModels"
             x:Class="Dauer.Ui.Views.TaskView"
             x:DataType="vm:TaskViewModel">

  <Design.DataContext>
    <vm:DesignTaskViewModel />
  </Design.DataContext>

  <UserControl.Styles>
    <StyleInclude Source="../Styles.axaml"/>
  </UserControl.Styles>

  <ScrollViewer>

    <ItemsControl Background="Transparent" ItemsSource="{Binding TaskService.Tasks}">

      <ItemsControl.Styles>
        <Style Selector="TextBlock">
          <Setter Property="Margin" Value="0 5 5 0"/>
        </Style>
      </ItemsControl.Styles>

      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <StackPanel Orientation="Vertical"/>
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>

      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <Border Background="{StaticResource SystemAccentColorDark1}" CornerRadius="20" Padding="10" Margin="10">

            <Grid RowDefinitions="*, *" ColumnDefinitions="*, Auto">

              <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Name}" FontWeight="Bold"/>
              <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Status}"/>
              
              <Menu Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right">

                <MenuItem Header="â‹®" FontSize="24"
                          ToolTip.Tip="Show task menu">

                  <MenuItem Header="_Cancel"
                            IsEnabled="{Binding !IsComplete}"
                            Command="{Binding Cancel}"
                            ToolTip.Tip="Cancel the task"/>
                </MenuItem>

              </Menu>

              <Button Grid.Row="1" Grid.Column="1" Width="150"
                    IsVisible="{Binding !IsComplete}"
                    Command="{Binding Cancel}"
                    CommandParameter="{Binding}"
                    Content="Cancel"/>
              <Button Grid.Row="1" Grid.Column="1" Width="150"
                    IsVisible="{Binding IsComplete}"
                    Command="{Binding $parent[UserControl].((vm:TaskViewModel)DataContext).HandleDismissClicked}"
                    CommandParameter="{Binding}"
                    Content="Dismiss"/>
            </Grid>

          </Border>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </ScrollViewer>

</UserControl>
