<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Dauer.Ui.Controls"
             xmlns:vm="clr-namespace:Dauer.Ui.ViewModels"
             xmlns:views="clr-namespace:Dauer.Ui.Views"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="Dauer.Ui.Views.FileView"
             x:DataType="vm:FileViewModel">
  <Design.DataContext>
    <vm:DesignFileViewModel />
  </Design.DataContext>

  <UserControl.Styles>
    <StyleInclude Source="../Styles.axaml"/>
  </UserControl.Styles>

  <Grid RowDefinitions="Auto, *" >
    
    <StackPanel Grid.Row="0" Orientation="Vertical" >
      <Button Command="{Binding HandleSelectFileClicked}" Content="Select file"/>
      <Button Command="{Binding HandleAuthorizeClicked}" Content="Authorize"/>
      <Button Command="{Binding HandleDownloadFilesClicked}" Content="Download file"/>
      <Button Command="{Binding HandleForgetFileClicked}" Content="Forget file"/>
    </StackPanel>

    <DataGrid Grid.Row="1" ItemsSource="{Binding FileService.Files}" SelectedIndex="{Binding SelectedIndex}" >
      <DataGrid.Columns>
        <DataGridTemplateColumn Header="Loaded">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <CheckBox IsChecked="{Binding IsLoaded}"/>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTextColumn Header="File Name" Binding="{Binding Blob.Name}" />
        <DataGridTemplateColumn Header="Progress">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <controls:PieProgressIndicator Maximum="100" Value="{Binding Progress}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>

</UserControl>
