<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\Common.props" />
  
  <PropertyGroup>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="Build" Condition="'$(Configuration)' == 'Release'">
    <Exec Condition="'$(IsOSPlatformOSX)' == 'false'" Command="pwsh.exe ..\Dauer.Ui.Desktop\create-release-win.ps1 $(Version)" />
    <Exec Condition="'$(IsOSPlatformOSX)' == 'false'" Command="pwsh.exe ..\Dauer.Ui.Desktop\create-release-linux.ps1 $(Version)" />
    <Exec Condition="'$(IsOSPlatformOSX)' == 'true'" Command="pwsh.exe ..\Dauer.Ui.Desktop\create-release-osx.ps1 $(Version)" />
  </Target>

  <ItemGroup>
    <ProjectReference Include="..\Dauer.Ui.Desktop\Dauer.Ui.Desktop.csproj" />
  </ItemGroup>
  
</Project>
