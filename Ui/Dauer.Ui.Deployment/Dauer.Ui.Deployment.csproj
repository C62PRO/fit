<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\Common.props" />
  
  <PropertyGroup>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="Build" Condition="'$(Configuration)' == 'Release'">
    <!-- true: Deploy to AWS S3 bucket -->
    <Exec Condition="$([MSBuild]::IsOSPlatform('Windows'))" Command="pwsh ../Dauer.Ui.Desktop/create-release-win.ps1 $(Version) true" />
    <Exec Condition="$([MSBuild]::IsOSPlatform('Linux'))" Command="pwsh ../Dauer.Ui.Desktop/create-release-linux.ps1 $(Version) true" />
    <Exec Condition="$([MSBuild]::IsOSPlatform('OSX'))"  Command="pwsh ../Dauer.Ui.Desktop/create-release-osx.ps1 $(Version) true" />
  </Target>
  
</Project>
