<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\Common.props" />
  
  <PropertyGroup>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="Build" Condition="'$(Configuration)' == 'Release'">
    <Exec Condition="$([MSBuild]::IsOSPlatform('OSX')) == 'false'" Command="pwsh ../Dauer.Ui.Desktop/create-release-win.ps1 $(Version)" />
    <Exec Condition="$([MSBuild]::IsOSPlatform('OSX')) == 'false'" Command="pwsh ../Dauer.Ui.Desktop/create-release-linux.ps1 $(Version)" />
    <Exec Condition="$([MSBuild]::IsOSPlatform('OSX')) == 'true'"  Command="pwsh ../Dauer.Ui.Desktop/create-release-osx.ps1 $(Version)" />
  </Target>
  
</Project>
