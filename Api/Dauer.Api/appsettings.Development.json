{
  "ConnectionStrings": {
    "Default": "Data Source=%localappdata%/Dauer.Api/db/dauer_api.db"
  },
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://0.0.0.0:80"
      },
      // Not needed on fly.io
      "Https": {
        "Url": "https://0.0.0.0:443"
      }
    }
  },
  "LettuceEncrypt": {
    "AcceptTermsOfService": true,
    "DomainNames": [ "stage-api.fitedit.io" ],
    "EmailAddress": "support@fitedit.io"
  },
  "UseSqlite": true,
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "Microsoft.Hosting.Lifetime": "Debug",
        "Microsoft.AspNetCore": "Warning"
      }
    }
  }
}
